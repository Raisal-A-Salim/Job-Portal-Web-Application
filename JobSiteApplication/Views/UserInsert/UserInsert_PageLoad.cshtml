@model JobSiteApplication.Models.UserInsertCls
@{
    ViewBag.Title = "UserInsert_PageLoad";
}
<h2>User Registration</h2>
<div>
    @using (Html.BeginForm("UserInsert_ButtonClick", "UserInsert", FormMethod.Post))
    {
        <div><label>Name:</label></div>
        <div>
            @Html.TextBoxFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <br />
        <div><label>Age:</label></div>
        <div>
            @Html.TextBoxFor(m => m.Age)
            @Html.ValidationMessageFor(m => m.Age)
        </div>
        <br />
        <div><label>Address:</label></div>
        <div>
            @Html.TextAreaFor(m => m.Address)
            @Html.ValidationMessageFor(m => m.Address)
        </div>
        <br />
        <div><label>Email:</label></div>
        <div>
            @Html.TextBoxFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <br />
        <div><label>Phone:</label></div>
        <div>
            @Html.TextBoxFor(m => m.Phone)
            @Html.ValidationMessageFor(m => m.Phone)
        </div>
        <br />
        <div><label>Gender:</label></div>
        <div>
            Male
            @Html.RadioButtonFor(m => m.Gender, "Male")
            Female
            @Html.RadioButtonFor(m => m.Gender, "Female")
            &emsp;
            &emsp;
            @Html.ValidationMessageFor(m=>m.Gender)
        </div>
        <br />
        <div><label>Qualification:</label></div>
        <div>
            @foreach (var item in Model.MyFavQuali)
             {
                <label>
                    <input type="checkbox" value="@item.Value" checked="@item.IsChecked" name="SelectedQuali" id="@item.Value" /> @Html.Raw(item.Text)  <!--raw is for all checkboxes to come in a single line-->
                </label>
             }
        </div>
        <br />
        <div><label>Skills:</label></div>
        <div>
            @Html.TextAreaFor(m => m.Skills)
            @Html.ValidationMessageFor(m => m.Skills)
        </div>
        <br />
        <div><label>Experience:</label></div>
        <div>
            @Html.TextAreaFor(m => m.Experience)
            @Html.ValidationMessageFor(m => m.Experience)
        </div>
        <br />
        <div><label>Username:</label></div>
        <div>
            @Html.TextBoxFor(m => m.Username)
            @Html.ValidationMessageFor(m => m.Username)
        </div>
        <br />
        <div><label>Password:</label></div>
        <div>
            @Html.PasswordFor(m => m.Password)
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <br />
        <div><label>Confirm Password:</label></div>
        <div>
            @Html.PasswordFor(m => m.ConfirmPassword)
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
        <br />
        <div>
            <input type="submit" value="Insert" />
            <br />
            @Html.DisplayFor(m => m.msg)
        </div>
    }
</div>